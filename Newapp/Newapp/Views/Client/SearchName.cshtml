@model IEnumerable<Newapp.Models.Client>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NiNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NiNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Client"
                   data-ajax="true"
                   data-ajax-method="get"
                   data-ajax-mode="replace"
                   data-ajax-url="Client\Edit?id=@item.ClientId"
                   data-ajax-update="#Ajform">Edit</a>  |
                <a asp-action="Details" asp-controller="Client"
                   data-ajax="true"
                   data-ajax-method="get"
                   data-ajax-mode="replace"
                   data-ajax-url="Client\Details?id=@item.ClientId"
                   data-ajax-update="#Ajform">Details</a>  |
                <a asp-action="AjaxDelete" asp-controller="Client"
                   data-ajax="true"
                   data-ajax-method="get"
                   data-ajax-mode="replace"
                   data-ajax-url="Client\AjaxDelete?id=@item.ClientId"
                   data-ajax-update="#CList">Delete</a>  |
            </td>
        </tr>
}
    </tbody>
</table>
